
{
  "compilerOptions": {
    "noImplicitAny": false,
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ESNext",
    "jsx": "react",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "allowJs": true,
    "outDir": "./output",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "./src/**/*",
    "global.types.d.ts",
    "global.module.d.ts"
  ]
}
